@model IEnumerable<Rocky.Models.Product>
@{
    ViewData["Title"] = "Продукты";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список продуктов</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                Создать новый продукт
            </a>
        </div>
    </div>

    <br />
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название продуктов
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>

                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width=50%>@obj.Name</td>
                        <td>@obj.Price</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                    Редактировать категорию
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Удалить категорию
                                </a>

                            </div>
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    }
    else
    {
        <p>Продукты не существуют</p>
    }
</div>


